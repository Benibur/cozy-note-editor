Debug = 1
maxDepth=4
limit = 4

trueRank(depth)
  if maxDepth > limit
    min(depth, limit)
  else
    limit - maxDepth + depth

titleMixin(rank, type)
  padding-left unit(max(5, 20 * (rank - 1)), px)
  margin-left unit(0, px)
  if type == 1
    margin-top unit(12, px)
    border-radius 5px 5px 5px 5px
    color orange
    width 100%
    box-sizing border-box
    -moz-box-sizing border-box
    -webkit-box-sizing border-box
    text-transform uppercase
    font-weight bold
  else if type == 2
    margin-top unit(5, px)
    color cyan
  else if type == 3
    margin-top unit(5, px)
    color green
  else
    margin-top unit(5, px)
    color 586408
  if rank == 1
    counter-reset    : section4
    counter-reset    : section3
    counter-reset    : section2
    counter-increment: section1
  else if rank == 2
    counter-reset    : section4
    counter-reset    : section3
    counter-increment: section2
  else if rank == 3
    counter-reset    : section4
    counter-increment: section3
  else if rank == 4
    counter-increment: section4

olMixin(rank)
  margin-left unit(20*rank, px)

ulMixin(rank)
  margin-left unit(20*rank, px)
  if rank <= 2
    margin-top unit(2, px)
  display list-item
  if rank % 4 == 0
    list-style-type circle
  else if rank % 2 == 0
    list-style-type square

titleLineMixin(rank)
  padding-left unit(max(5, 20 * (rank - 1)), px)

lineMixin(rank)
  padding-left unit(max(22, 20 * rank), px)


